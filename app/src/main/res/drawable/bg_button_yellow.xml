<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item  android:state_pressed="true">
    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
        <corners
            android:radius="2dp"
            />
        <size
            android:width="@dimen/button_item_width"
            android:height="@dimen/button_item_height"
            />
        <solid
            android:color="@color/colorDarkYellow"
            />

    </shape>
</item>

<item android:state_enabled="false">
    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
        <corners
            android:radius="2dp"
            />
        <size
            android:width="@dimen/button_item_width"
            android:height="@dimen/button_item_height"
            />
        <solid
            android:color="@color/colorLightYellow"
            />
    </shape>
</item>

<item >
    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
        <corners
            android:radius="2dp"
            />
        <size
            android:width="@dimen/button_item_width"
            android:height="@dimen/button_item_height"
            />
        <solid
            android:color="@color/colorYellow"
            />

    </shape>
</item>
</selector>