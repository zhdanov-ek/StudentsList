<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item  android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="5dp"
                />
            <solid
                android:color="@color/colorBackgroundLayoutPress"
                />
            <stroke
                android:width="2dp"
                android:color="@color/colorFrameLayoutPress" />

        </shape>
    </item>

    <item >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="5dp"
                />
            <solid
                android:color="@color/colorBackgroundLayout"
                />
            <stroke
                android:width="2dp"
                android:color="@color/colorFrameLayout" />

        </shape>
    </item>
</selector>