<resources>

    <!-- Base application theme.  -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="ButtonGit" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/bg_button_git</item>
        <item name="android:textColor">@color/colorGit</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">5dp</item>

    </style>

    <style name="ButtonGoogle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/bg_button_google</item>
        <item name="android:textColor">@color/colorGoogle</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">5dp</item>

    </style>


</resources>
